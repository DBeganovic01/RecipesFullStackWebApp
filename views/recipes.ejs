<%- include("partials/header") %>
    <div class="container">
        <div class="row mt-2">
            <% recipes.forEach((recipe) => { %>
            <div class="card m-3 p-0">
                <a href="#">
                    <img class="card-img" src="<%= recipe.image %>" alt="Picture of the food">
                </a>    
                <h3 class="card-title mt-2"><%= recipe.recipeName %></h3>
                <p class="card-text mx-2 mb-2"><%= recipe.description %></p>
            </div>
            <% }) %>
        </div>
    </div>
<%- include("partials/footer") %>